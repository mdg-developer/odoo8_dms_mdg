<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="report_purchaseorder_document_inherit"
			inherit_id="purchase.report_purchaseorder_document">
			<xpath expr="//t[@t-call='report.external_layout']" position="replace">

				<t t-call="report.external_layout">
					<div class="page">
						<div class="oe_structure" />
						<div class="row">
							<div class="col-xs-6">
								<br />
								<br />
								<br />
								<h3>
									<strong>Purchase Order</strong>
								</h3>

							</div>

							<div class="col-xs-6">
								<br />
								<br />
								<br />
								<p>
									<strong>Date:</strong>
									<span t-field="o.date_order" />
								</p>
								<p>
									<strong>PO Number:</strong>
									<span t-field="o.name" />
								</p>
								<p>
									<strong>Supplier Reference:</strong>
									<span t-field="o.partner_ref" />
								</p>
								<p>
									<strong>Supplier ID:</strong>
									<span t-field="o.partner_id.customer_code" />
								</p>
							</div>
						</div>
						<div class="row">
							<div class="col-xs-6">

								<div>
									<p>
										<strong>Supplier: </strong>
									</p>
								</div>
								<div t-if="o.partner_id">
									<div t-field="o.partner_id"
										t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax" ,"email"], "no_marker": true}' />
									<strong>Contact Person:</strong>
									<span t-field="o.partner_id.temp_customer" />
									<br />
									<strong>Contact Number:</strong>
									<span t-field="o.partner_id.mobile" />
								</div>

							</div>
							<div class="col-xs-6">
								<div>
									<p>
										<strong>Ship To: </strong>
									</p>
								</div>
								<div t-if="o.company_id.partner_id">
									<div t-field="o.company_id.partner_id"
										t-field-options='{"widget": "contact", "fields": ["address", "name", "phone" ], "no_marker": true}' />
									<strong>Contact Person:</strong>
									<span t-field="o.company_id.partner_id.temp_customer" />
									<br />
									<strong>Contact Number:</strong>
									<span t-field="o.company_id.partner_id.mobile" />
								</div>
							</div>
						</div>

						<div class="row">
							<div class="col-xs-6">

								<div>
									<strong>Destination:</strong>
									<span t-field="o.location_id.address" />
									<br />
									<strong>Trading Terms:</strong>
									<span t-field="o.incoterm_id.name" />
								</div>
							</div>
							<div class="col-xs-6">
								<div>
									<strong>Payment Method</strong>
									<span t-field="o.payment_method_id.name" />
									<br />
									<strong>Payment Term:</strong>
									<span t-field="o.payment_term_id.name" />
									after
									<span t-field="o.partner_id.base_on_payment" />
									<br />
									<strong>Currency:</strong>
									<span t-if="o.currency_id" t-field="o.currency_id.name" />
								</div>
							</div>
						</div>
						<br />
						<br />

						<table class="table table-condensed" style="border:1pt solid;">
							<thead>
								<tr style="background-color:#0052cc;color:#ffffff;" height="10pt;">
									<th style="border:1pt solid;border-color:black;">No</th>
									<th style="border:1pt solid;border-color:black;">Product Code</th>
									<th style="border:1pt solid;border-color:black;">Product Descript:</th>
									<th style="border:1pt solid;border-color:black;">Market Price</th>
									<th style="border:1pt solid;border-color:black;">Previous Price</th>
									<th style="border:1pt solid;border-color:black;">Diff Amt</th>
									<th style="border:1pt solid;border-color:black;">Diff Status</th>
									<th style="border:1pt solid;border-color:black;">Margin</th>
									<th style="border:1pt solid;border-color:black;">Shelf Life</th>
									<th style="border:1pt solid;border-color:black;">Expiration Date</th>
									<th style="border:1pt solid;border-color:black;">SKU Status</th>
									<th style="border:1pt solid;border-color:black;">Unit</th>
									<th style="border:1pt solid;border-color:black;">Quantity</th>
									<th style="border:1pt solid;border-color:black;">Price</th>
									<th style="border:1pt solid;border-color:black;">Dis(Amt)</th>
									<th style="border:1pt solid;border-color:black;">Dis(%)</th>
									<th style="border:1pt solid;border-color:black;">Total(MMK)</th>
								</tr>
							</thead>
							<tbody>
								<t t-set="i" t-value="1" />
								<tr t-foreach="o.order_line" t-as="line">
									<td align="center" style="border:1pt solid;border-color:black;">
										<span t-esc="i" />
										<t t-set="i" t-value="i+1" />
									</td>
									<td style="border:1pt solid;border-color:black;">
										<span t-field="line.product_id.default_code" />
									</td>
									<td style="border:1pt solid;border-color:black;">
										<span t-field="line.name" />
									</td>

									<td style="border:1pt solid;border-color:black;">
										<span t-field="line.product_uom.name" groups="product.group_uom" />
									</td>
									<td style="border:1pt solid;border-color:black;">
										<span t-field="line.market_selling_price" />
									</td>
									<td style="border:1pt solid;border-color:black;">
										<span t-field="line.previous_buying_price" />
									</td>
									<td style="border:1pt solid;border-color:black;">
										<span t-field="line.difference_amount" />
									</td>
									<td style="border:1pt solid;border-color:black;">
										<span t-field="line.difference_status" />
									</td>
									<td style="border:1pt solid;border-color:black;">
										<span t-field="line.margin" />
									</td>
									<td style="border:1pt solid;border-color:black;">
										<span t-field="line.shelf_life" />
									</td>
									<td style="border:1pt solid;border-color:black;">
										<span t-field="line.estimated_expiration_date" />
									</td>
									<td style="border:1pt solid;border-color:black;">
										<span t-field="line.sku_status" />
									</td>
									<td style="border:1pt solid;border-color:black;">
										<span t-field="line.product_qty" />
									</td>
									<td style="border:1pt solid;border-color:black;">
										<span t-field="line.price_unit" />
									</td>
									<td style="border:1pt solid;border-color:black;">
										<span t-field="line.discount_amt" />
									</td>
									<td style="border:1pt solid;border-color:black;">
										<span t-field="line.discount" />
									</td>
									<td style="border:1pt solid;border-color:black;">
										<span t-field="line.price_subtotal" />
									</td>
								</tr>
							</tbody>
						</table>

						<div class="row">
							<div class="col-xs-4 pull-right">
								<table class="table table-condensed">
									<!-- <tr class="border-black"> -->
									<!-- <td> -->
									<!-- <strong>Total Without Taxes</strong> -->
									<!-- </td> -->
									<!-- <td class="text-right"> -->
									<!-- <span t-field="o.amount_untaxed" -->
									<!-- t-field-options='{"widget": "monetary", "display_currency": 
										"o.currency_id"}' /> -->
									<!-- </td> -->
									<!-- </tr> -->
									<!-- <tr> -->
									<!-- <td>Taxes</td> -->
									<!-- <td class="text-right"> -->
									<!-- <span t-field="o.amount_tax" -->
									<!-- t-field-options='{"widget": "monetary", "display_currency": 
										"o.currency_id"}' /> -->
									<!-- </td> -->
									<!-- </tr> -->
									<tr class="border-black">
										<td>
											<strong>Subtotal</strong>
										</td>
										<td class="text-right">
											<span t-field="o.amount_total"
												t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}' />
										</td>
									</tr>
								</table>
							</div>
						</div>
						<div class="row">
							<div class="col-xs-6">
								<div>
									<strong>Bank Info:</strong>
									<div t-foreach="o.partner_id.bank_ids" t-as="b_line">
										<span>
											<span t-field="b_line.acc_number" />
										</span>
									</div>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-xs-3">
								<br />
								<br />
								<br />
								<div>
									<strong>Prepared By:</strong>
									<br />
									<span t-field="o.create_uid.name" />								</div>
							</div >
							<div class="col-xs-3">
 								<br />
								<br />
								<br />
								<div>
									<strong>Checked By:</strong>
									<br />
									<span t-field="o.check_user.name" />
								</div>

							</div>
							<div class="col-xs-3">
								<br />
								<br />
								<br />
								<div>
									<strong>Verified By:</strong>
									<br />
									<span t-field="o.verify_user.name" />
								</div>

							</div>
							<div class="col-xs-3">
								<br />
								<br />
								<br />
								<div>
									<strong>Approved By:</strong>
									<br />
									<span>Ma Thidar Khin</span>
									<br />
									<span>General Manager</span>
									<br />
									<span>Myanmar Distribution Group</span>
								</div>

							</div>

						</div>
						<br/>
						<br/>
						<br/>
						<strong>Amount In Words:</strong>
						<p t-field="o.inword" />
						<div class="oe_structure" />
						<strong>Remarks:</strong>
						<p t-field="o.notes" />
						<div class="oe_structure" />
					</div>
				</t>
			</xpath>
		</template>
	</data>
</openerp>