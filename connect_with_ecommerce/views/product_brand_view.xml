<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
	<!-- Product Brand Form -->
		<record id="view_product_brand_form" model="ir.ui.view">
			<field name="name">prodcut.brand.form</field>
			<field name="model">product.brand</field>
			<field name="arch" type="xml">
				<form string="Burmart Brand" version="7.0">
					<group>
						<field name="name" />
					</group>
				</form>
			</field> 
		</record>

		<!-- Product Brand Tree -->
		<record id="view_product_brand_tree" model="ir.ui.view">
			<field name="name">product.brand.tree</field>
			<field name="model">product.brand</field>
			<field name="arch" type="xml">
				<tree string="Burmart Brand" version="7.0">
					<field name="name" />
				</tree>
			</field>
		</record>

		<!-- Product Group Action -->
		<record id="action_product_brand_view" model="ir.actions.act_window">
			<field name="name">Burmart Brand</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">product.brand</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" eval="view_product_brand_tree" />
		</record>

		<!-- Product Brand Menu -->
		<menuitem id="product_brand_menu" parent="product_product.product_menu"
			name="Burmart Brand" action="action_product_brand_view" groups="base.group_system" />

	</data>
</openerp>