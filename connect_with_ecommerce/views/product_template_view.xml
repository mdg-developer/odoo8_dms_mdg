<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="inherit_product_template_form_view_ecommerce" model="ir.ui.view">
					<field name="name">product.template.product.tree</field>
					<field name="model">product.template</field>
					<field name="inherit_id" ref="product.product_template_form_view" />
					<field name="arch" type="xml">						
						<field name="active" position="after">							
							<field name="is_sync_ecommerce"/>
						</field>
						<xpath expr="//h1" position="after">
						    <label class="oe_edit_only" for="short_name" string="Product Short Name"/>
                            <h1><field name="short_name" class="oe_inline" style="width: 100%%"/></h1>
							<label class="oe_edit_only" for="myanmar_name" string="Product Myanmar Name"/>
							<h1><field name="myanmar_name" class="oe_inline" style="width: 100%%"/></h1>
						</xpath>
						<!-- <xpath expr="//field[@name='list_price']" position="replace">
						</xpath> -->
						<xpath expr="//field[@name='uom_ratio']" position="replace">
						</xpath>
						<xpath expr="//field[@name='report_uom_id']" position="after">
							<field name='uom_ratio'/>
						</xpath>
						<xpath expr="//form/sheet" position="before">
							<button name="generate_product_code" string="Generate Sequence" attrs="{'invisible':[('is_generated_code','=',True)]}" type="object" class="oe_highlight"/>
							<field name="is_generated_code" invisible="1"/>
						</xpath>
						<!-- this button disappear when is_generated_int_ref True -->
						<xpath expr="//form/sheet" position="before">
							<button name="generate_internal_ref" string="Generate Product Code" attrs="{'invisible':[('is_generated_int_ref','=',True)]}" type="object" class="oe_highlight"/>
							<field name="is_generated_int_ref" invisible="1"/>
						</xpath>
						<xpath expr="//field[@name='categ_id']" position="attributes"> 
                        	<attribute name="domain">[('principal_id', '=', main_group)]</attribute>
                    	</xpath>
						<xpath expr="//field[@name='categ_id']" position="replace">
						</xpath>
						<xpath expr="//field[@name='uom_id']" position ="attributes">
							<attribute name="on_change">on_change_uom_id(uom_id)</attribute>
						</xpath>
						<xpath expr="//field[@name='report_uom_id']" position ="attributes">
							<attribute name="on_change">onchange_report_uom_id(uom_id,report_uom_id)</attribute>
						</xpath>
					</field>
		</record>
		
		<record id="product_template_form_view_inherit_city" model="ir.ui.view">
			<field name="name">product.template.form.view.inherit.city</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product_product.product_template_form_view_inherit" />
			<field name="arch" type="xml">				
				<xpath expr="//page[@name='uoms']" position="after">
					<page name="city" string="City" invisible="1">
						<field name="city_lines"/>
					</page>
					<page name="ecommerce" string="Ecommerce">
					    <group>					        
						    <group>
						        <field name="ecommerce_uom_id" style="width: 90%%" />
								<field name="tag_ids" widget="many2many_tags" string="Burmart Tag" style="width: 90%%" />
								<field name="brand_id" string="Burmart Brand" style="width: 90%%" />
								<field name="ecommerce_supplier_id" string="Burmart Supplier" style="width: 90%%" />
						    </group>
						    <group>	
						        <field name="delivery_id"/>
								<field name="group" string="Burmart Category"/>
								<field name="ecommerce_department_id" domain="[('group_id', '=', group)]" string="Burmart Department"/>
						        
						        <!-- <field name="ecommerce_price"/> -->
						    </group>
					    </group>					    						
					</page>
				</xpath>
			</field>
		</record>

		<record id="product_template_form_view_inherit_carton_inherit" model="ir.ui.view">
			<field name="name">product.template.form.view.inherit.carton.inherit</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="warehouse_application.product_template_form_view_inherit_carton" />
			<field name="arch" type="xml">
				<xpath expr="//field[@name='bypass_barcode']" position="replace">
				</xpath>
				<xpath expr="//field[@name='is_sync_sd']" position="after">
					<field name='bypass_barcode'/>
				</xpath>
			</field>
		</record>

		<record id="product_template_form_view_inherit_ecommerce" model="ir.ui.view">
			<field name="name">product.template.form.view.inherit</field>
			<field name="model">product.template</field>
			<field name="type">form</field>			
			<field name="inherit_id" ref="product_product.product_template_form_view_inherit"/>	
			<field name="arch" type="xml">		
					<xpath expr="//field[@name='uom_price_lines']/tree/field[@name='per_pallet']" position="after">
						<field name="for_ecommerce"/>
					</xpath>
					<xpath expr="//field[@name='company_id']" position="after">
						<label for="description" string="Product Description"/>
					</xpath>
					<xpath expr="//page[@string='UOM Info']" position="replace">
					</xpath>
					<xpath expr="//page[@string='Information']" position="after">
						<page name="uoms_price" string="UOM Info">
							<field name="uom_price_lines">
								<form string="UOM Price Lines">
									<group>
										<field name="name" on_change="onchange_product_uom(name)" />
										<field name="category_id" />
										<field name="factor" />
										<field name="price" />
										<field name="uom_ratio" />
										<field name="weight" />
										<field name="length" />
										<field name="width" />
										<field name="height" />
										<field name="per_pallet" />
									</group>
								</form>
								<tree string="UOM Price Lines" editable="bottom">
									<field name="name" on_change="onchange_product_uom(name)" />
									<field name="category_id" />
									<field name="factor" />
									<field name="price" />
									<field name="uom_ratio" />
									<field name="weight" />
									<field name="length" />
									<field name="width" />
									<field name="height" />
									<field name="per_pallet" />
								</tree>
							</field>
						</page>
					</xpath>
					<!--- shl -->
					<xpath expr="//page[@string='UOM']" position="replace">
					</xpath>
					<xpath expr="//page[@string='UOM Info']" position="after">
						<page name="uoms" string="UOM">
							<field name="uom_lines">
							</field>
						</page>
					</xpath>

					<xpath expr="//page[@string='Accounting']/group/label[@string='Product Principal']" position="replace">
					</xpath>
					<xpath expr="//field[@name='main_group']" position="replace">
					</xpath>
					<xpath expr="//page[@string='Accounting']/group/label[@string='Product Category']" position="replace">
					</xpath>
					<xpath expr="//page[@string='Accounting']/group/label[@string='Sub Group']" position="replace">
					</xpath>
					<xpath expr="//field[@name='group']" position="replace">
					</xpath>

					<xpath expr="//page[@string='Accounting']/group" position="after">
						<group>
							<label for="main_group" string="MDG Principal" />
							<field name="main_group" nolabel="1"/>
							<label for="categ_id" string="MDG Category"/>
							<field name="categ_id" domain="[('principal_id', '=', main_group)]" nolabel="1"/>
						</group>
					</xpath>


					<xpath expr="//page[@string='Inventory']/group[@name='inventory']/group[@name='weight']" position="attributes">
						<attribute name="string">Carton, Weights and Dimensions</attribute>
					</xpath>
			</field>
		</record>
		<record id="product_template_search_view_inherit_for_filter" model="ir.ui.view">
			<field name="name">product.template.search.inherit.for.filter</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product_product.product_template_search_view_inherit" />
			<field name="arch" type="xml">
				<xpath expr="//filter[@string='Product Principle']" position="attributes">
					<attribute name="string">Product Principal</attribute>
				</xpath>
			</field>
		</record>
	</data>
</openerp>