<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
	<!-- Product Tag  Form -->
		<record id="view_product_tag_form" model="ir.ui.view">
			<field name="name">prodcut.tag.form</field>
			<field name="model">product.tag</field>
			<field name="arch" type="xml">
				<form string="Burmart Tag" version="7.0">
					<group>
						<field name="name" />

					</group>
				</form>
			</field>
		</record>
		<!-- Product Tag Tree -->
		<record id="view_product_tag_tree" model="ir.ui.view">
			<field name="name">product.tag.tree</field>
			<field name="model">product.tag</field>
			<field name="arch" type="xml">
				<tree string="Burmart Tag" version="7.0">
					<field name="name" />
				</tree>
			</field>
		</record>
		<!-- Product Tag Action -->
		<record id="action_product_tag_view" model="ir.actions.act_window">
			<field name="name">Burmart Tag</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">product.tag</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" eval="view_product_tag_tree" />
		</record>

		<!-- Product Tag Menu -->
		<menuitem id="product_tag_menu" parent="product_product.product_menu"
			name="Burmart Tag" action="action_product_tag_view" sequence="4" groups="base.group_system" />

	</data>
</openerp>